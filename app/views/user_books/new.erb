<h1>My ReadingList: Add Comment to Book</h1>
<br>
<h2>Add Comment To (Select Book):</h2>
<form action="/user_books" method="POST">
  <input type="hidden" name="user_book[user_id]" value="<%=current_user.id%>">
    <%@books.each do |book|%>
    <p><input type="checkbox" name="check_list_items[book_ids][]" value="<%=book.id%>"><%=book.title%> - <%=book.author%></p>
      <label for="book_id_<%=book.id%>_comment">Comment: </label>
      <input id="book_id_<%=book.id%>_comment" type="textarea" name="check_list_items[book_id_<%=book.id%>][comment]">
      <input type="submit" value="Add Comment">
    <%end%>
</form>
